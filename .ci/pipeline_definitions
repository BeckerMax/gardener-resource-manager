gardener-resource-manager:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          gardener-resource-manager:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/gardener-resource-manager'
            dockerfile: 'Dockerfile'
            target: gardener-resource-manager
    steps: ~
  jobs:
    head-update:
      traits:
        component_descriptor:
          snapshot_ctx_repository: gardener-public
        draft_release: ~
        options:
          public_build_logs: true
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
        options:
          public_build_logs: true
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
          - ref_template: 'refs/tags/api/{VERSION}'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C9CEBQPGE' #sap-tech-gardener
              slack_cfg_name: 'scp_workspace'
        component_descriptor:
          snapshot_ctx_repository: gardener-public
        publish:
          dockerimages:
            gardener-resource-manager:
              tag_as_latest: true
